# ===========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================================
# Copy file này thành .env và điền thông tin thực của bạn
# KHÔNG bao giờ commit file .env vào Git!

# ===========================================
# API KEYS (BẮT BUỘC)
# ===========================================
# OpenRouter API Key - Lấy từ https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Together AI API Key (tuỳ chọn) - Lấy từ https://together.ai/
TOGETHER_API_KEY=your_together_api_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Đường dẫn đến file database SQLite
DATABASE_URL=sqlite:///./quizzes.db

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Debug mode (True/False)
DEBUG=True

# Server host và port
HOST=localhost
PORT=8000

# ===========================================
# MODEL CONFIGURATION
# ===========================================
# Default model cho OpenRouter
DEFAULT_MODEL=anthropic/claude-3-haiku

# ===========================================
# VECTOR STORE SETTINGS
# ===========================================
# Thư mục lưu vector embeddings
VECTOR_STORE_PATH=./chroma_db

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Secret key cho session (tạo random string)
SECRET_KEY=your_secret_key_here

# CORS origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
